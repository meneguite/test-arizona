{% extends 'layout.twig' %}

{% block sub_title 'Initial Page' %}
{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <h1>Choose the format to be displayed</h1>
            <div class="actions">
                <a class="btn btn-primary btn-lg show-countries-view" href="/countries">
                    <i class="fa fa-eye" aria-hidden="true"></i> View on Screen
                </a>
                <a class="btn btn-default btn-lg show-countries-csv" href="/countries/csv" target="_blank">
                    <i class="fa fa-file-excel-o" aria-hidden="true"></i> Export to CSV
                </a>
                <a class="btn btn-default btn-lg show-countries-json" href="/countries/json" target="_blank">
                    <i class="fa fa-exchange" aria-hidden="true"></i> Export to JSON
                </a>
            </div>
        </div>
    </div>
{% endblock body %}
